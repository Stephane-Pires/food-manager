// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Generate the client
generator client {
  provider = "prisma-client-js"
}

// Connect to the database  (sqlite, mySQL, mongoDB, PostgreSQL)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// A table inside the database
model Link {
  id          String  @id @unique
  name        String
  description String
  url         String
  category    Stack
  isItCool    Boolean @default(true)
}

model Recipe {
  id          String   @id @unique
  name        String
  description String
  url         String
  service     Service
  diets       Diet[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// BELOW YOU WILL FIND ENUMERATION

enum Stack {
  FULLSTACK
  FRONTEND
  BACKEND
}

enum Diet {
  VEGAN
  VEGETARIAN
  CARNIVORE
  PESCETARIAN
}

enum Service {
  APERITIF
  STARTER
  MAIN
  DESSERT
  COCKTAIL
}
